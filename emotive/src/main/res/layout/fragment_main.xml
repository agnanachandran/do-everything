<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".MainActivity$DummySectionFragment">

            <TextSwitcher
                android:id="@+id/mainTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:fontFamily="sans-serif-light"
                android:text="    Good evening,\nWhat do you want to do?"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/ll_primary_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_shadow_card"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <LinearLayout
                    android:id="@+id/horizontalButtonLinearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundrect"
                    android:weightSum="3">

                    <LinearLayout
                        style="@style/primaryBtnContainer"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgFirstOption"
                            style="@style/circle_image"
                            android:src="@drawable/primary_food_selector" />

                        <Button
                            android:id="@+id/bFirstOption"
                            style="@style/CustomTransparentButton"
                            android:text="Eat" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/primaryBtnContainer"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgSecondOption"
                            style="@style/circle_image"
                            android:src="@drawable/primary_music_selector" />

                        <Button
                            android:id="@+id/bSecondOption"
                            style="@style/CustomTransparentButton"
                            android:text="Listen" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/primaryBtnContainer"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgThirdOption"
                            style="@style/circle_image"
                            android:src="@drawable/primary_google_selector" />

                        <Button
                            android:id="@+id/bThirdOption"
                            style="@style/CustomTransparentButton"
                            android:text="Learn" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/horizontalButtonLinearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundrect">

                    <LinearLayout
                        style="@style/primaryBtnContainer"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgFourthOption"
                            style="@style/circle_image"
                            android:src="@drawable/primary_find_selector" />

                        <Button
                            android:id="@+id/bFourthOption"
                            style="@style/CustomTransparentButton"
                            android:text="Find" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/primaryBtnContainer"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgFifthOption"
                            style="@style/circle_image"
                            android:src="@drawable/primary_watch_selector" />

                        <Button
                            android:id="@+id/bFifthOption"
                            style="@style/CustomTransparentButton"
                            android:text="Watch" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/primaryBtnContainer"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgSixthOption"
                            style="@style/circle_image"
                            android:src="@drawable/primary_note_selector" />

                        <Button
                            android:id="@+id/bSixthOption"
                            style="@style/CustomTransparentButton"
                            android:text="Note" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_search_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_shadow_card"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgSearchIcon"
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:contentDescription="@string/search_icon_desc"
                    android:src="@android:drawable/ic_menu_search" />

                <AutoCompleteTextView
                    android:id="@+id/mainSearchView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical"
                    android:hint="@string/placeholder_mainSearchView"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/LightGrayText" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_panel_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ListView
            android:id="@+id/lvQueryResults"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00000000"
            android:dividerHeight="10dp"
            tools:listitem="@layout/youtube_list_item" />
    </LinearLayout>


</RelativeLayout>