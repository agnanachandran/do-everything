<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_shadow_card"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weather_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="San Francisco"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/weather_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="CA, USA"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/weather_now_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/weather_clear_day" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:id="@+id/weather_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif"
                android:text="Partly Cloudy"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/weather_precipitation"
                android:layout_below="@id/weather_status"
                android:text="Precip: 30%"
                style="@style/weather_right_aligned_info" />

            <TextView
                style="@style/weather_right_aligned_info"
                android:id="@+id/weather_humidity"
                android:layout_below="@id/weather_precipitation"
                android:text="Humidity: 57%"
/>

            <TextView
                style="@style/weather_right_aligned_info"
                android:id="@+id/weather_feels_like"
                android:layout_below="@id/weather_humidity"
                android:text="Feels like: 17°"
                />

            <TextView
                android:id="@+id/weather_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/weather_feels_like"
                android:fontFamily="sans-serif-light"
                android:text="21°"
                android:textColor="@color/white"
                android:textSize="100sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <include layout="@layout/weather_time_mini_card" />

                <include layout="@layout/weather_time_mini_card" />

                <include layout="@layout/weather_time_mini_card" />

                <include layout="@layout/weather_time_mini_card" />

                <include layout="@layout/weather_time_mini_card" />

                <include layout="@layout/weather_time_mini_card" />

            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <include layout="@layout/weather_time_mini_card" />

                <include layout="@layout/weather_time_mini_card" />

                <include layout="@layout/weather_time_mini_card" />

                <include layout="@layout/weather_time_mini_card" />

                <include layout="@layout/weather_time_mini_card" />

                <include layout="@layout/weather_time_mini_card" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>