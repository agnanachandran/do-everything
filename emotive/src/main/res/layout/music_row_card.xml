<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_shadow_card"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:id="@+id/music_title_and_duration_container"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMusicTitle"
                style="@style/lightTextView"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_marginRight="2dp"
                android:text="@string/placeholder_text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:maxLines="2"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvMusicDuration"
                style="@style/lightTextView"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:maxLines="1"
                android:gravity="right"
                android:layout_marginLeft="8dp"
                android:textColor="@color/white"
                android:text="@string/placeholder_text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/music_artist_and_album_container"
            android:orientation="horizontal"
            android:layout_below="@id/music_title_and_duration_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/tvMusicArtist"
                style="@style/lightTextView"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:text="@string/placeholder_text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/LightGrayText"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:id="@+id/tvMusicAlbum"
                style="@style/lightTextView"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_marginLeft="8dp"
                android:gravity="right"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="@string/placeholder_text"
                android:textColor="@color/LightGrayText" />
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>