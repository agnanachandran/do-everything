<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_primary_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_shadow_card"
        android:orientation="vertical"
        android:paddingBottom="0dp">

        <LinearLayout
            android:id="@+id/horizontalButtonLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundrect">

            <LinearLayout
                style="@style/primaryBtnContainer"
                android:layout_marginRight="0dp"
                android:layout_marginEnd="0dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgFirstOption"
                    style="@style/circle_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/primary_food_selector" />

            </LinearLayout>

            <LinearLayout
                style="@style/primaryBtnContainer"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgSecondOption"
                    style="@style/circle_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/primary_music_selector" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/horizontalButtonLinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/roundrect">


            <LinearLayout
                style="@style/primaryBtnContainer"
                android:orientation="vertical"
                android:layout_marginRight="0dp"
                android:layout_marginEnd="0dp" >
                <ImageView
                    android:id="@+id/imgThirdOption"
                    style="@style/circle_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/primary_watch_selector" />

            </LinearLayout>

            <LinearLayout
                style="@style/primaryBtnContainer"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgFourthOption"
                    style="@style/circle_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/primary_weather_selector" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>